{
  "$schema": "https://railway.app/railway.schema.json",
  "plugins": [
    { "name": "postgres" }
  ],
  "services": [
    {
      "name": "api",
      "rootDir": "services/api",
      "build": {
        "cmd": "npm ci && npm run build"
      },
      "deploy": {
        "startCommand": "node dist/index.js",
        "healthcheckPath": "/health",
        "env": {
          "PORT": "8080",
          "NODE_ENV": "production"
        }
      }
    },
    {
      "name": "ingestion",
      "rootDir": "services/ingestion",
      "build": {
        "cmd": "npm ci && npm run build"
      },
      "deploy": {
        "startCommand": "node dist/index.js",
        "healthcheckPath": "/health",
        "env": {
          "PORT": "8081",
          "NODE_ENV": "production"
        }
      }
    }
  ]
}
