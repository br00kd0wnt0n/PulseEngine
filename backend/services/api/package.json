{
  "name": "pulse-api",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": { "node": "20.x" },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -b",
    "postinstall": "npm run build",
    "start": "node dist/index.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/db/data-source.ts src/db/migrations/auto",
    "migration:run": "ts-node-esm src/scripts/run-migrations.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
